<?xml version="1.0" encoding="utf-8"?>
<odoo>

    

    <!-- form view of the patient model  -->
    <record id="patient_form" model="ir.ui.view">
        <field name="name">custom.module.form</field>
        <field name="model">custom.module</field>
        <field name="arch" type="xml">
            <form string = "custom">
                <group>
                <field name = "name"/>
                <field name = "age"/>
                <field name = "payment_method"/>
                </group> 
                
            </form>
        </field>
    </record>

    <record id="action_custom" model="ir.actions.act_window">
        <field name="name">Customs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">custom.module</field>
        
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create First Patient
          </p>
        </field>
    </record>

    <menuitem id="custom_root" name = "Custom" />
    <menuitem id="custom_child" name = "customs" parent = "custom_root" action="action_custom"/>

   
</odoo>