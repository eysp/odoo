<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id= "app_report_sales_order_form_view_new" model= "ir.ui.view">
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="model">sale.order</field >
        <field name="arch" type= "xml">
               <field name="payment_term_id" position = "after" >
                    <field name="custom_payment_method" />
                </field>
        </field>
    </record>


    <!-- form view of the patient model  -->
    <record id="patient_form" model="ir.ui.view">
        <field name="name">custom.module.form</field>
        <field name="model">custom.module</field>
        <field name="arch" type="xml">
            <form string = "custom">
                <group>
                <field name = "name"/>
                <field name = "age"/>
                <field name = "payment_method"/>
                </group> 
            </form>
        </field>
    </record>

    <record id="view_sales_order_filter_inherit" model="ir.ui.view">
        <field name="name">sale.order.search.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <search string="Search Sales Order">
                <field name="custom_payment_method" />
                <group expand="1" string="Group By">
                    <filter string="P M" name="p m" context="{'group_by':'custom_payment_method'}"/>
                </group>
            </search>
        </field>
   </record>

    <!-- <record id="view_sales_order_filter_inherit1" model="ir.ui.view">
        <field name="name">sale.report.search.inherit</field>
        <field name="model">sale.report</field>
        <field name="inherit_id" ref="sale.view_order_product_search"/> 
        <field name="arch" type="xml">
            <search string="Sales Analysis">
                <field name="custom_payment_method" /> 
                <group expand="1" string="Group By">
                    <filter string="P M" name="p m" context="{'group_by':'custom_payment_method'}"/>
                </group>
            </search>
        </field>
    </record>  -->

    <record id="action_custom" model="ir.actions.act_window">
        <field name="name">Customs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">custom.module</field>
        
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create First Patient
          </p>
        </field>
    </record>

    <menuitem id="custom_root" name = "Custom" />
    <menuitem id="custom_child" name = "customs" parent = "custom_root" action="action_custom"/>
</odoo>