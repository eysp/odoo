<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id= "app_report_sales_order_form_view_new" model= "ir.ui.view">
       
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="model">sale.order</field >
        <field name="arch" type= "xml">
               <field name="payment_term_id" position = "after" >
                    <field name="custom_payment_method" />
                </field>
        </field>
    </record>

    <record id="sale.view_quotation_tree_with_onboarding" model="ir.ui.view">                                
        <field name="name">sale.view.quotation.tree.with.onboarding.search</field>                                
        <field name="model">sale.order</field>                                
        <field name="arch" type="xml">                                    
          <search>
            <field name="custom_payment_method" />                                  
            <group string="Group By">                                            
              <!-- <filter string="Company" name="parent_id" context="{'group_by': 'parent_id'}"></filter>                                            
              <filter string="Country" name="country_id" context="{'group_by': 'country_id'}"></filter>                                            
              <filter string="Sales person" name="salesperson_id" context="{'group_by': 'user_id'}"></filter>-->  
            <filter string="P M" name="payment_method" context="{'group_by':'custom_payment_method'}"></filter>                                       -->
            </group>                                    
          </search>                                
        </field>                            
      </record>
    

    <!-- form view of the patient model  -->
    <record id="patient_form" model="ir.ui.view">
        <field name="name">custom.module.form</field>
        <field name="model">custom.module</field>
        <field name="arch" type="xml">
            <form string = "custom">
                <group>
                <field name = "name"/>
                <field name = "age"/>
                <field name = "payment_method"/>
                </group> 
                
            </form>
        </field>
    </record>


    

    <!-- <filter string="P M" name="payment_method" context="{'group_by':'payment_method'}"/> -->

    <record id="action_custom" model="ir.actions.act_window">
        <field name="name">Customs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">custom.module</field>
        
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create First Patient
          </p>
        </field>
    </record>

    <menuitem id="custom_root" name = "Custom" />
    <menuitem id="custom_child" name = "customs" parent = "custom_root" action="action_custom"/>

   
</odoo>