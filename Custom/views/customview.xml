<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id= "app_report_sales_order_form_view_new" model= "ir.ui.view">
        
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="model">sale.order</field >
        <field name="arch" type= "xml">
               
            <xpath expr="//sheet/group/group" position="inside">
               <field name="custom_payment_method"/>
            </xpath>

                <!--<xpath expr="//group[@name='Group By']/filter[@name='Order Date']" position="after">
                    <filter string="Custom Payment Method" domain="[]" context="{'group_by':'custom_payment_method'}"/>
                </xpath>-->

                <!--<xpath expr="//search/group" position="inside">
                    <filter string="Custom Payment Method" domain="[]" context="{'group_by':'custom_payment_method'}"/>
                </xpath>-->

                <!--<xpath expr="//filter[@name='Order Date'] position="after">
                    <field name="custom_payment_method"/>
                </xpath>-->

                <!--<search string="Sales Analysis">
                    <group expand="1" string="Group By">
                        <filter string="Custom Payment Method" domain="[]" context="{'group_by':'custom_payment_method'}"/>
                    </group>
                </search>-->        



        </field>
    </record>

   

    <record id="view_form" model="ir.ui.view">
            <field name="name">custom_Data</field>
            <field name="model">custom.module</field>
            <field name="arch" type="xml">
                <form>
                <sheet>
                   <group>
                       <group>
                           <field name="name"/>
                           <field name="age" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
            </field>
    </record>


    <record id= "view_report_sales_order_form_view_new" model= "ir.ui.view">
        
        <field name="inherit_id" ref="sale.view_order_product_search"/>
        <field name="model">sale.report</field >
        <field name="arch" type= "xml">
               
            <xpath expr="//search/group" position="inside">
               <filter string="Custom Payment Method" name="Custom Payment Method" context="{'group_by':'custom_payment_method'}"/>
            </xpath>
        </field>    
    </record>

</odoo>
